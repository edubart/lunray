global argbcolor = @record{
  b: byte,
  g: byte,
  r: byte,
  a: byte
}

function argbcolor.fromvec3(col: vec3): argbcolor <inline>
  return argbcolor{
    (@uint8)(math.clamp(col.z*255, 0, 255)),
    (@uint8)(math.clamp(col.y*255, 0, 255)),
    (@uint8)(math.clamp(col.x*255, 0, 255)),
    255
  }
end
